---
import { SEO } from 'astro-seo'

const TITLE = 'Carlos Burelo - Web Developer & Software Engineer'
const DESCRIPTION =
  'I am a software engineer and web developer based in the United States. I specialize in building web applications and websites using React, Next.js, and Astro. I also have experience with Node.js, Express, and MongoDB.'
const TYPE = 'website'
const IMAGE = 'https://carlosburelo.vercel.app/hero.webp'
const URL = 'https://carlosburelo.vercel.app'

const TWITTER_HANDLE = '@carlosburelo9'
---

<SEO
  title={TITLE}
  description={DESCRIPTION}
  canonical={URL}
  charset={'utf-8'}
  openGraph={{
    basic: {
      title: TITLE + ' | Carlos Burelo',
      type: TYPE,
      image: IMAGE,
      url: URL,
    },
    image: {
      alt: TITLE,
    },
  }}
  twitter={{
    creator: TWITTER_HANDLE,
    site: TWITTER_HANDLE,
    card: 'summary_large_image',
    description: DESCRIPTION,
    image: IMAGE,
    title: TITLE,
    imageAlt: TITLE,
  }}
  extend={{
    link: [
      { rel: 'canonical', href: URL },
      { rel: 'icon', type: 'image/webp', href: '/avatar.webp' },
      { rel: 'sitemap', type: 'application/xml', href: '/sitemap-index.xml' },
    ],
    meta: [
      { name: 'generator', content: Astro.generator },
      { name: 'viewport', content: 'width=device-width, initial-scale=1.0' },
    ],
  }}
/>
